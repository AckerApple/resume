mixin index(options)
  -options = options || {};
  doctype html
  html(lang="en")
    head
      meta(charset="utf-8")
      title Acker Apple
      base(href=options.base || '/')

      meta(name="viewport" content="viewport-fit=cover, width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
      meta(name="theme-color" content="#222222")

      meta(name="apple-mobile-web-app-capable" content="yes")
      meta(name="apple-mobile-web-app-status-bar-style" content="black")
      meta(name="apple-mobile-web-app-title" content="Acker Apple")
      link(rel="apple-touch-icon" href="/assets/images/profile-72@2x.png")
      link(rel="apple-touch-icon" sizes="152x152" href="/assets/images/assets/images/profile-72@2x.png")
      link(rel="apple-touch-icon" sizes="180x180" href="/assets/images/profile-60@3x.png")
      link(rel="apple-touch-icon" sizes="167x167" href="/assets/images/profile-83.5@2x.png")
      link(rel="apple-touch-startup-image" href="/assets/images/screen@2x~iphone.png")

      link(rel="icon" type="image/x-icon" href="favicon.ico")
      link(href="/assets/fonts/Montserrat/Montserrat.css" rel="stylesheet" type="text/css")
    body.height-full
      noscript(style="color:red") Javascript is required but is turned off on your device
      
      .text-white.pos-abs.width-full.height-full.flex-valign-center.flex-center(
        id="mainLoadIcon"
      )
        .fa.fa-spinner.fa-spin.fa-lg   

      app-root.height-full.block