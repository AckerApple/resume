.pad-h.text-center.flex-evenly.flex-wrap.child-margin
  ng-container(*ngTemplateOutlet="family")
  ng-container(*ngTemplateOutlet="florida")
  ng-container(*ngTemplateOutlet="movedSinceTemplate")
  ng-container(*ngTemplateOutlet="alive")
  ng-container(*ngTemplateOutlet="birthday")
  ng-container(*ngTemplateOutlet="graduatedTemplate")
  ng-container(*ngTemplateOutlet="codingSinceTemplate")
  ng-container(*ngTemplateOutlet="married")

ng-template(#florida="")
  .flex-1.pad.border.border-grey-4x.radius-5.flex-stacked.bg-white
    .pad.flex-1
      img.width-full.max-width-200(
        src="assets/images/florida.png"
      )
    .bg-grey-4x.pad.text-black.radius-5
      strong Florida Grown
      .text-xs
        div 27th state on March 3, 1845

ng-template(#alive="")
  .flex-1.pad.border.border-grey-4x.radius-5.flex-stacked.bg-white
    .pad.flex-1.flex-valign-center.flex-center
      div
        i.fas.fa-baby.fa-5x.text-energized
    .bg-grey-4x.pad.text-black.radius-5
      strong Alive {{ aliveFor.years }} Years
      .text-xs
        strong {{ aliveFor.months }}
        |month{{ aliveFor.months | endNumberWord }}
        |&nbsp;
        strong {{ aliveFor.weeks }}
        |week{{ aliveFor.weeks | endNumberWord }}
        |&nbsp;
        strong {{ aliveFor.days }}
        |day{{ aliveFor.days | endNumberWord}}
      .text-xxs
        strong {{ aliveFor.hours }}
        |hour{{ aliveFor.hours | endNumberWord }}
        |&nbsp;
        strong {{ aliveFor.minutes }}
        |min{{ aliveFor.minutes | endNumberWord }}.
        |&nbsp;
        strong {{ ('0' + aliveFor.seconds).slice(-2) }}
        |sec{{ aliveFor.seconds | endNumberWord }}.

ng-template(#codingSinceTemplate="")
