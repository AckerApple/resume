
.pad
  .margin-0.text-smx(
    [innerHtml]="changelog | safeHtml"
  )
br

div(
  *ngIf="appSizeChart"
  "[@fadeInOutUp]" = "1"
)
  div(
    #ewm = "ElementWidthModel"
    "[(elementWidthModel)]" = "width"
  )

  div(
    "[style.display]" = "ewm.inChange ? 'none' : 'block'"
    "[style.width.px]"="width"
  )
    iframe(
      src = "/stats.html"
      "[attr.width]"     = "width"
      "[style.width.px]" = "width"
      height = "800"
      frameBorder = "0"
    )

.flex.pad
  a.flex-1.pad-v.radius-5.flex-valign-center(
    "(click)" = "appSizeChart=!appSizeChart"
    "[ngClass]" = "appSizeChart ? 'bg-energized' : 'bg-positive'"
  )
    i.fas.fa-chart-pie.pad-h
    strong.flex-1.text-center
      |app size chart
    i.fas.fa-chart-pie.pad-h.invisible
